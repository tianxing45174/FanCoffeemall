.bgl{
  position: fixed;
  width: 100%;height: 100%;
  background-color: #F5F5F5;
}
.userbg{
  width:100%;
  height: 400rpx;
  background-color: #ccc;
}
.userbg image{
  width: 100%;height: 100%;
}
.myuserf{
  color: #404041;
  z-index: 1000;
  position: absolute;
  top: 370rpx;
  left: 2%;
  width: 96%;
  margin: 0 auto;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-image: linear-gradient(180deg,hsla(0,0%,100%,.5) 0,hsla(0,0%,100%,.5) 0.93333rem,#fff 0);
}
.username{
  display: flex;
  padding: 20rpx;
  align-items: center;
}
.username .img{
  width: 100rpx;
  height: 100rpx;
}
.img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 1px solid #E5E5E5;
}
.username .userpic{
  flex:1;
  margin-left: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.set{
padding: 20rpx;
font-size: 28rpx;
color: #404041;
}
.set view{
  color: #404041;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #F3F3F3;
  height: 100rpx;
}
.set view:nth-last-child(1){
  border: none;
}
.userpic view:nth-of-type(1){
  color: #0C33BA;
  font-weight: bold;
}
.userpic view:nth-of-type(2){
  color: #6F6F6F;
  margin-top: 20rpx;
  font-size: 12px;
}
