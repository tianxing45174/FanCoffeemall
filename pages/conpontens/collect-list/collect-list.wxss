.reqlist{
  padding: 0 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.shangping{
  width: 42%;
  background-color: #fde6e6;
  margin-top: 10px;
  padding: 10px;
  border-radius: 10px;
  position: relative;
}
.shangping .remai{
  color: #ffffff;
  background-color: #e4393c;
  width: 35px;
  font-size: 12px;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  position: absolute;
  right: 10px;
  text-align: center;
}
.shangping .image{
  width: 100%;
  height: 120px;
  border-radius: 10px;
}
.shangping .name{
  color: #444444;
  margin-top: 10px;
}
.shangping .enname{
  color: #999999;

}