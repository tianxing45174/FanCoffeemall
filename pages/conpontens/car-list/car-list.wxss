/* pages/conpontens/car-list.wxss */
.main{
  padding: 10px;
}
.once{
  display: flex;
  background-color: #fff;
  margin-top: 5px;
  padding: 5px;
  align-items: center;
  justify-content: space-between;
  border-radius: 20px;
}
.img{
  width: 80px;
  height: 80px;
}
.img image{
  width: 80px;
  height: 80px;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
}
.name{
  width: 100px;
  height: 100%;
  margin-left: 10px;
}
.name1{
  color: #444444;
}
.name2{
  color: #999999;
  font-size: 12px;
  width: 90px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.price{
  color: tomato;
  font-weight: bold;
}
/* 选择数量 */
.select-count-box{
  display: flex;
  height: 50px;
  align-items: center;
  justify-content: space-between;
  border-top: #F5F5F5 1px solid;
  border-bottom:#F5F5F5 1px solid ;
  margin-top: 25px;
  color: #666666;
  font-size: 14px;
}
.select-count-box view:nth-of-type(2) text:nth-of-type(1),
.select-count-box view:nth-of-type(2) text:nth-of-type(3){
  display: inline-block;
  width: 25px;
  height: 25px;
  border: 1px solid #febec0;
  color: #febec0;
  text-align: center;
  line-height: 22px;
  font-size: 18px;
  border-radius: 50%;
}
.select-count-box view:nth-of-type(2) text:nth-of-type(2){
  margin: 0 10px;
  width: 20px;
  display: inline-block;
  text-align: center;
  color: #323232;
}
.select-count-box view:nth-of-type(2) text:nth-of-type(3){
  background-color: #ee0d24;
  color: #ffffff;
}